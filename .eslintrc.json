{
  "extends": ["eslint:recommended", "plugin:jsx-a11y/recommended", "plugin:react/recommended"],
  "plugins": ["jsx-a11y"], 
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": false
    }
  },
  "env": {
    "es2021": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-var": "warn",
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        
      }
    }
  ]
}
