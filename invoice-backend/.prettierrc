{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ],
  "singleQuote": false,
  "plugins": [
    "prettier-plugin-graphql"
  ],
  "overrides": [
    {
      "files": [
        "*.graphql",
        "*.gql"
      ],
      "options": {
        "parser": "graphql"
      }
    }
  ]
}
