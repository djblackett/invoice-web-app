{
  "name": "invoice-backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "prisma": {
    "seed": "node ./prisma/seed.js"
  },
  "scripts": {
    "test:unit": "vitest ./tests/unit",
    "test:integration": "cross-env CERT_DIR='../certs/' DATABASE_URL=postgres://postgres:example@localhost:5432/db-test NODE_ENV=test vitest ./tests/integration",
    "coverage": "cross-env DATABASE_URL=postgres://postgres:example@localhost:5432/db-test CERT_DIR='../certs/' vitest run --coverage",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "build:slim": "npm run prisma-generate && ncc build ./src/index.ts -o dist -t",
    "dev": "cross-env NODE_ENV=development CERT_DIR='../certs/' ts-node-dev -r tsconfig-paths/register src/index.ts",
    "prod": "cross-env NODE_ENV=production ts-node-dev src/index.ts",
    "lint": "eslint --config ./eslint.config.mjs ./src",
    "lint:fix": "eslint --config ./eslint.config.mjs --fix ./src",
    "format": "prettier --write .",
    "start": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register dist/src/index.js",
    "start:test": "cross-env DATABASE_URL=postgresql://postgres:example@db-dev:5432/db-test NODE_ENV=test CERT_DIR='../certs/' ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start:test:ci": "cross-env DATABASE_URL=postgresql://postgres:example@localhost:5432/db-test NODE_ENV=test CERT_DIR='../certs/' ts-node-dev -r tsconfig-paths/register src/index.ts",
    "generate": "graphql-codegen",
    "codegen": "graphql-codegen --config codegen.ts",
    "prisma-generate": "prisma generate",
    "prisma-push": "prisma db push"
  },
  "author": "David Andrea",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "22.7.5",
    "@vitest/ui": "^3.0.7",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.13.0",
    "graphql-codegen-typescript-mock-data": "^4.1.0",
    "graphql-prettier": "^1.0.6",
    "inversify-dts": "^3.0.0",
    "node-mocks-http": "^1.14.1",
    "prettier": "^3.4.2",
    "supertest-graphql": "^1.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript-eslint": "^8.17.0",
    "vitest": "^3.0.8",
    "vitest-mock-extended": "^2.0.2"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@graphql-tools/schema": "^10.0.6",
    "@prisma/client": "6.2.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ws": "^8.5.10",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "graphql": "^16.9.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.16.0",
    "inversify": "^6.0.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "prisma": "6.2.1",
    "reflect-metadata": "^0.2.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "winston": "3.3.1",
    "ws": "^8.18.1",
    "zod": "^3.23.8"
  },
  "packageManager": "yarn@4.6.0"
}
