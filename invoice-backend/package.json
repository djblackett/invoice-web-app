  "main": "src/index.ts",
  "scripts": {
    "test:unit": "vitest",
    "coverage": "vitest run --coverage",
    "build": "tsc -p tsconfig.build.json",
    "build:slim": "npm run prisma-generate && ncc build ./src/index.ts -o dist -t",
    "test": "NODE_ENV=test ts-node-dev --loader ts-node/esm src/index.ts",
    "dev": "NODE_ENV=development ts-node-dev --loader ts-node/esm src/index.ts",
    "prod": "NODE_ENV=production ts-node-dev src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write .",
    "start": "NODE_ENV=production node dist/src/index.js",
    "generate": "graphql-codegen",
    "codegen": "graphql-codegen --config codegen.ts",
    "prisma-generate": "npx prisma@5.22.0 generate"
  },
